<MudDialog Style="width: 80vw;max-width: 80vw;overflow-y: scroll;top:5%;position: absolute">
    <DialogContent>
        <QuestionTypesComponent 
            Test="Test"
            Question="Question"
            QuestionChanged="(question) => Question = question"></QuestionTypesComponent>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="@Color" Variant="Variant.Filled" OnClick="Submit">@ButtonText</MudButton>
    </DialogActions>
</MudDialog>

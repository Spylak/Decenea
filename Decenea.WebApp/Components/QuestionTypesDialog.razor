<MudDialog Style="width: 80vw;max-width: 80vw;overflow-y: scroll;top:5%;position: absolute">
    <DialogContent>
        <QuestionTypesComponent 
            TestModel="TestModel"
            Question="GenericQuestion"
            QuestionChanged="@(question => GenericQuestion = question)"></QuestionTypesComponent>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="@Color" Variant="Variant.Filled" OnClick="Submit">@ButtonText</MudButton>
    </DialogActions>
</MudDialog>

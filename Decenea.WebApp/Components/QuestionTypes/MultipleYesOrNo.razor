@inherits QuestionBaseComponent

<MudGrid>
    @if (!ReadOnly)
    {
        <MudItem xs="12">
            <MudTextField T="string" Lines="6"
                          Style="width: 100%"
                          @bind-Value="MultipleYesOrNoQuestionModel.Question"
                          Variant="Variant.Outlined"
                          Label="Question"/>
        </MudItem>
        <MudItem xs="12" sm="4">
            <MudButton Color="Color.Info" Variant="Variant.Filled" OnClick="AddNewField">Add Sub Question</MudButton>
        </MudItem>
        <MudItem xs="12" sm="2">
            
        </MudItem>
        <MudItem xs="12" sm="2" Style="text-align: end">
            <MudButton Color="Color.Secondary" Variant="Variant.Filled" OnClick="async () => await CreateSample()">Sample</MudButton>
        </MudItem>
        <MudItem xs="12" sm="2" Style="text-align: end">
            <MudButton Color="Color.Warning" Variant="Variant.Filled" OnClick="async () => await Reset()">Reset</MudButton>
        </MudItem>
        <MudItem xs="12" sm="2" Style="text-align: end">
            <MudButton Color="Color.Tertiary" Variant="Variant.Filled" OnClick="async () => await Save()">Save</MudButton>
        </MudItem>
    }
    else
    {
        <MudItem>
            <MudField Variant="Variant.Outlined" Label="Question">
                @MultipleYesOrNoQuestionModel.Question
            </MudField>
        </MudItem>
    }

    @foreach (var item in Fields)
    {
        if (!ReadOnly)
        {
            <MudItem xs="12" sm="2">
                <MudButton FullWidth="true"
                           Color="Color.Error"
                           Variant="Variant.Filled"
                           OnClick="() => RemoveField(item)">
                    Remove Field
                </MudButton>
            </MudItem>
        }
        <MudItem xs="12" sm="10">
            <MudTextField T="string" Lines="6"
                          Style="width: 100%;height: 100%"
                          @bind-Value="item.SubQuestion.Text"
                          Variant="Variant.Outlined"
                          Label="Question"
                          ReadOnly="ReadOnly"/>
        </MudItem>
        <MudItem xs="0" sm="2"></MudItem>
        <MudItem xs="12" sm="10">
            <MudSwitch Color="Color.Success" T="bool" @bind-Checked="@(item.SubQuestion.Checked)" Label="@(item.SubQuestion.Checked ? "Yes" : "No")"/>
        </MudItem>
    }
</MudGrid>

